        <item name="colorPrimary">@color/replyblue_700</item>
        <item name="colorPrimaryVariant">@color/replyblue_800</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/replyblue_600</item>
        <item name="colorSecondaryVariant">@color/replyorange_500</item>
